<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_store"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1420142.co5025assignment.Store">

    <Button
        android:text=""
        android:textSize="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:layout_below="@+id/changeFirstPlayer"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_alignStart="@+id/SW"
        android:layout_marginTop="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/SW" />

    <TextView
        android:text="this will either show current pieces or will tell the player to log in"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/checkLogin"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColour"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp" />

    <Button
        android:text="Button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:id="@+id/catDog"
        android:textSize="40dp"
        android:layout_below="@+id/checkLogin"
        android:layout_alignStart="@+id/checkLogin" />

    <Button
        android:text="Button"
        android:layout_width="200dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_height="200dp"
        android:id="@+id/happySad"
        android:textSize="40dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="34dp"
        android:layout_alignBottom="@+id/catDog"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:id="@+id/goatRooster"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:textSize="40dp"
        android:layout_below="@+id/catDog"
        android:layout_alignStart="@+id/catDog" />

    <Button
        android:text="Button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/sunMoon"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:textSize="40dp"
        android:layout_alignBottom="@+id/goatRooster"
        android:layout_alignStart="@+id/happySad" />

    <Button
        android:text="Reset to default pieces"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:id="@+id/reset"
        android:layout_marginStart="49dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/goatRooster"
        android:layout_marginBottom="35dp" />

    <TextView
        android:text="currencyOutput"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:textColor="@color/textColour"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reset"
        android:layout_alignStart="@+id/goatRooster"
        android:layout_marginBottom="17dp"
        android:id="@+id/currencyOutput" />
</RelativeLayout>
