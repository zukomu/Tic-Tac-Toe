<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1420142.co5025assignment.Settings">

    <Button
        android:text=""
        android:textSize="45dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home"
        android:layout_below="@+id/changeFirstPlayer"
        android:layout_alignStart="@+id/SW"
        android:layout_marginTop="41dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/SW" />

    <TextView
        android:text="winStreak"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/winStreak"
        android:layout_below="@+id/gamesWon"
        android:layout_alignStart="@+id/gamesWon" />

    <TextView
        android:text="userInfo"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userInfo"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/gamesPlayed"
        android:layout_marginTop="0dp" />

    <TextView
        android:text="gamesPlayed"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gamesPlayed"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/userInfo"
        android:layout_alignStart="@+id/highestWinStreak" />

    <TextView
        android:text="highestwinstreak"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highestWinStreak"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/winStreak"
        android:layout_toEndOf="@+id/home" />

    <TextView
        android:text="gamesWon"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/gamesWon"
        android:layout_below="@+id/gamesPlayed"
        android:layout_alignStart="@+id/gamesPlayed" />

    <TextView
        android:text="losses"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/highestWinStreak"
        android:layout_alignStart="@+id/highestWinStreak"
        android:layout_marginTop="22dp"
        android:id="@+id/losses" />

    <TextView
        android:text="draws"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/losses"
        android:layout_alignStart="@+id/losses"
        android:layout_marginTop="21dp"
        android:id="@+id/draws" />

    <TextView
        android:text="winPercentage"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/winPercentage"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/draws"
        android:layout_alignStart="@+id/draws" />

    <TextView
        android:text="Difficulty - Easy"
        android:textSize="30dp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/difficultyLabel"
        android:layout_below="@+id/winPercentage"
        android:layout_alignStart="@+id/winPercentage"
        android:layout_marginTop="36dp" />

    <Button
        android:text="Medium"
        android:textColor="#999"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:background="@color/colorPrimary"
        android:id="@+id/difficultyMedium"
        android:layout_below="@+id/difficultyLabel"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="21dp" />

    <Button
        android:text="Easy"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:id="@+id/difficultyEasy"
        android:layout_alignBaseline="@+id/difficultyMedium"
        android:layout_alignBottom="@+id/difficultyMedium"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Hard"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:id="@+id/difficultyHard"
        android:layout_above="@+id/home"
        android:layout_alignParentStart="true" />

    <Button
        android:text="perfect"
        android:id="@+id/difficultyPerfect"
        android:textSize="30dp"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_alignBaseline="@+id/difficultyHard"
        android:layout_alignBottom="@+id/difficultyHard"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Night Mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:id="@+id/colourScheme"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
