<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a1420142.co5025assignment.MainMenu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/verticalline"
        android:layout_marginTop="99dp"
        android:id="@+id/leftVertical"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/bottomHorizontal"
        android:layout_marginStart="49dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/verticalline"
        android:id="@+id/rightVertical"
        android:layout_marginEnd="48dp"
        android:layout_alignTop="@+id/leftVertical"
        android:layout_alignEnd="@+id/bottomHorizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/horizontalline"
        android:layout_marginTop="47dp"
        android:id="@+id/topHorizontal"
        android:layout_alignTop="@+id/leftVertical"
        android:layout_alignStart="@+id/bottomHorizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/horizontalline"
        android:id="@+id/bottomHorizontal"
        android:layout_alignBottom="@+id/leftVertical"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp" />

    <Button
        android:text="Play Game"
        android:textSize="45dp"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:id="@+id/playGame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="settings and statistics"
        android:textSize="45dp"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:id="@+id/settings"
        android:layout_marginTop="109dp"
        android:layout_below="@+id/playGame"
        android:layout_alignStart="@+id/playGame" />

    <Button
        android:text="store"
        android:textSize="45dp"
        android:layout_width="300dp"
        android:layout_height="75dp"
        android:id="@+id/store"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/playGame"
        android:layout_alignStart="@+id/playGame" />

    <TextView
        android:text="Username"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Login"
        android:textColor="@color/textColour"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/username" />

    <Button
        android:text="login"
        android:textSize="45dp"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:id="@+id/Login"
        android:layout_alignParentTop="true"
        android:textColor="@color/textColour"
        android:background="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp" />

    <TextView
        android:text="money will show here"
        android:textSize="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textColour"
        android:id="@+id/currencyOutput"
        android:layout_below="@+id/username"
        android:layout_alignStart="@+id/username" />

</RelativeLayout>
